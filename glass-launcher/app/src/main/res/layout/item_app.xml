<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_card_width"
    android:layout_height="@dimen/app_card_height"
    android:layout_margin="@dimen/app_card_margin"
    android:background="@drawable/bg_app_card"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/app_card_padding">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/app_label_size" />

</LinearLayout>
