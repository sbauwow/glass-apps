<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:paddingLeft="@dimen/card_padding_h"
    android:paddingRight="@dimen/card_padding_h"
    android:paddingTop="@dimen/card_padding_v"
    android:paddingBottom="@dimen/card_padding_v"
    android:clipChildren="true"
    android:clipToPadding="true">

    <!-- Source + date on one line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/card_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF00BCD4"
            android:textSize="@dimen/source_text_size"
            android:maxLines="1"
            android:scrollHorizontally="false" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#88FFFFFF"
            android:textSize="@dimen/date_text_size"
            android:maxLines="1"
            android:paddingLeft="6dp" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        android:maxLines="2"
        android:scrollHorizontally="false"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        android:textStyle="bold" />

    <!-- Description â€” constrained to remaining space -->
    <TextView
        android:id="@+id/card_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#BBFFFFFF"
        android:textSize="@dimen/desc_text_size"
        android:maxLines="12"
        android:scrollHorizontally="false"
        android:lineSpacingExtra="1dp" />

</LinearLayout>
