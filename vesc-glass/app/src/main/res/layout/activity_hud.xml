<?xml version="1.0" encoding="utf-8"?>
<!--
    Glass display: 640x360. Layout optimized for prism readability.
    Duty cycle is the hero metric — largest element, dead center.

    ┌──────────────────────────────────────┐
    │  18 mph              DUTY        82% │
    │                      65%             │
    │  42.1V   38°C            1.3 mi     │
    │          ■■■■■■■■░░  SCANNING...    │
    └──────────────────────────────────────┘
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hud_bg"
    android:padding="8dp">

    <!-- CLOSE BUTTON (top-right corner, above battery) -->
    <TextView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="[X]"
        android:textColor="#CCFF1744"
        android:textSize="18sp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#22FFFFFF" />

    <!-- === RIGHT COLUMN: Battery % (below close button) === -->
    <LinearLayout
        android:id="@+id/batt_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/close_btn"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:id="@+id/batt_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/hud_green"
            android:textSize="44sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="batt %"
            android:textColor="@color/hud_dim"
            android:textSize="12sp"
            android:layout_marginTop="-4dp"
            android:gravity="right" />
    </LinearLayout>

    <!-- STATUS BAR (bottom) — connection state + duty bar -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="SCANNING..."
        android:textColor="@color/hud_dim"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Duty cycle bar (bottom left) -->
    <ProgressBar
        android:id="@+id/duty_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:max="1000"
        android:progress="0" />

    <!-- === CENTER: DUTY CYCLE (hero metric) === -->
    <LinearLayout
        android:id="@+id/duty_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/duty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUTY"
            android:textColor="@color/hud_dim"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/duty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/hud_green"
            android:textSize="72sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/duty_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/hud_dim"
            android:textSize="16sp"
            android:layout_marginTop="-8dp" />
    </LinearLayout>

    <!-- === LEFT COLUMN: Speed === -->
    <LinearLayout
        android:id="@+id/speed_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/hud_white"
            android:textSize="56sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mph"
            android:textColor="@color/hud_dim"
            android:textSize="12sp"
            android:layout_marginTop="-4dp" />

        <TextView
            android:id="@+id/heading_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/hud_dim"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- === BOTTOM ROW: Voltage, Temp, Trip === -->
    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/duty_bar"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/voltage_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--V"
            android:textColor="@color/hud_dim"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/temp_mos_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C:--°"
            android:textColor="@color/hud_dim"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/temp_motor_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M:--°"
            android:textColor="@color/hud_dim"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/temp_batt_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B:--°"
            android:textColor="@color/hud_dim"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/trip_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-- mi"
            android:textColor="@color/hud_dim"
            android:textSize="16sp"
            android:gravity="right" />
    </LinearLayout>

</RelativeLayout>
